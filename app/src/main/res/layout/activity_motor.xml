<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MotorActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Activity_2"
            android:layout_centerInParent="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    <Button
            android:id="@+id/button_3"
            android:layout_width="373dp"
            android:layout_height="56dp"
            android:text="@string/button_return1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:focusable="true"
            app:layout_constraintVertical_bias="0.976" android:onClick="goActivityMain"
            app:layout_constraintHorizontal_bias="0.421"/>

    <Button
            android:text="@string/bluetooth_Select"
            android:layout_width="374dp"
            android:layout_height="wrap_content"
            android:id="@+id/goBluetooth"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="goActivityBluetooth"
            app:layout_constraintVertical_bias="0.881"
            app:layout_constraintHorizontal_bias="0.486"/>


</android.support.constraint.ConstraintLayout>