<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:id="@+id/control_on"
            android:text="@string/on"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="172dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="151dp"
            android:layout_marginStart="151dp" android:layout_marginTop="22dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toTopOf="@+id/control_off"/>

    <Button
            android:id="@+id/control_off"
            android:text="@string/off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="172dp"
            android:layout_marginBottom="22dp" app:layout_constraintBottom_toTopOf="@+id/control_disconnect"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="151dp"
            android:layout_marginStart="151dp" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/control_on"/>

    <Button
            android:id="@+id/control_disconnect"
            android:text="@string/disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="160dp"
            android:layout_marginTop="22dp" app:layout_constraintTop_toBottomOf="@+id/control_off"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="141dp"
            android:layout_marginStart="141dp" android:layout_marginBottom="515dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>